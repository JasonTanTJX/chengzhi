<form bindsubmit="submitFunction" report-submit="{{true}}">
<!-- <view >标题：</view> -->
	<input class="newinput" name="title" bindinput="bindTitleChange"></input>
	<picker mode="date" value="{{date}}" bindchange="bindDateChange">
		<view class="newpicker">
			日期: {{date}}
		</view>
	</picker>
	<picker mode="time" value="{{time}}" bindchange="bindTimeChange">
		<view class="newpicker">
			时间: {{time}}
		</view>
	</picker>
	<block wx:if="{{image}}">
		<image src="{{image}}"></image>
	</block>
	<button class="newpicker" bindtap="selectImage">选择图片</button>
	<button class="newpicker" bindtap="chooseLocation">选择位置</button>
	<button class="button1" bindtap="submitFunction">提交</button>
</form>